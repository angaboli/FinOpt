{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@presentation/*": [
        "./src/presentation/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@finopt/shared": [
        "../../packages/shared/src/index.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
